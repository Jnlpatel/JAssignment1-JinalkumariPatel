extends ../layout

block content
  h1 Edit Project
  form(method="POST", action=`/admin/projects/edit/${project._id}`)
    label Title:
    input(type="text", name="title", value=project.title, required)
    br
    label Description:
    textarea(name="description", required)= project.description
    br
    label Technologies (comma separated):
    input(type="text", name="technologies", value=project.technologies.join(', '), required)
    br
    label Link:
    input(type="text", name="link", value=project.link)
    br
    label Image URL:
    input(type="text", name="image", value=project.image)
    br
    button(type="submit") Update Project
  a(href="/admin/projects") Back to Projects
